<div id="dialog" class="dialog">
	<div id="dialog_content" class="dialog_content">
		<h1 class="dialog__h1">
			Реєстрація
		</h1>
		<div class="dialog-socials">
            <a href="/auth/facebook" class="login-fb">
                Вхід через Facebook
            </a>
            <a href="/auth/google" class="login-google">
                Вхід через Google+
            </a>
        </div>
        <div class="login-separator">
            або
        </div>
		<form action="/signup" method="post">
			<div class="row {{#if errors.fname}}row--error{{/if}}">
				<label class="row__label" for="fname">
					{{#if errors.fname}}
	                    {{errors.fname}}
	                {{else}}
	                    Ім'я
	                {{/if}}
				</label>
				<input class="row__input higher" type="text" name="fname" {{#if fname}}value="{{fname}}"{{/if}} maxlength="25" />	
			</div>
			<div class="row {{#if errors.lname}}row--error{{/if}}">
				<label class="row__label" for="lname">
					{{#if errors.lname}}
	                    {{errors.lname}}
	                {{else}}
	                    Прізвище
	                {{/if}}
				</label>
				<input class="row__input higher" type="text" name="lname" {{#if lname}}value="{{lname}}"{{/if}} maxlength="25" />	
			</div>
			<div class="row {{#if errors.email}}row--error{{/if}}">
				<label class="row__label" for="email">
					{{#if errors.email}}
	                    {{errors.email}}
	                {{else}}
	                    E-mail
	                {{/if}}
				</label>
				<input class="row__input higher" type="email" name="email" {{#if email}}value="{{email}}"{{/if}} maxlength="50" />	
			</div>
			<div class="row {{#if errors.password}}row--error{{/if}}">
				<label class="row__label" for="password">
					{{#if errors.password}}
	                    {{errors.password}}
	                {{else}}
	                    Пароль
	                {{/if}}
				</label>
				<div class="password-holder">
                    <input id="loginPassword" class="row__input higher password" type="password" name="password" {{#if password}}value="{{password}}"{{/if}} maxlength="25" />
                    <div class="password-toggle" title="Показати пароль" data-title="Показати пароль" data-shown-title="Сховати пароль" data-password-toggle="loginPassword"></div>
                </div>
                <aside class="row--aside ">
                    {{#checkbox 'rememberme'}}
                        <input id="rememberme" type="checkbox" name="rememberme" value="true" {{#if rememberme}}checked="checked"{{/if}} />
                    {{/checkbox}}<label for="rememberme" class="label--small">Пам'ятати мене</label> <!-- todo: revise markup -->
                </aside>
			</div>
			<button class="dialog__button" type="submit" data-ajax-submit-dialog="signup">Зареєструватись</button>
		</form>
		<aside class="dialog__aside">
			<a href="/login" data-ajax-dialog="login">У мене вже є аккаунт</a>
		</aside>
	</div>
</div>