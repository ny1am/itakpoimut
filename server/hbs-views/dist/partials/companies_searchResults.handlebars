{{#if companies}}
	<div class="search-results-header clearfix">
		Підібрано {{companiesCount}} з {{allCompaniesCount}} компаній
		<div class="right">
			<button type="submit" class="plain sort-{{#equals sortOrder 'asc'}}desc{{else}}asc{{/equals}}" formaction="/companies?sortOrder={{#equals sortOrder 'asc'}}desc{{else}}asc{{/equals}}" data-ajax-formsubmit>
			За алфавітом
			</button>
		</div>
	</div>
	<div class="search-results-items">
		{{#each companies}}
			<div class="result-row">
				<a href="/company/{{_id}}" class="result-row-logo">
					<img src="{{img}}">
				</a>
				<div class="result-row-body">
					<a href="/company/{{_id}}">
						{{title}}
					</a>
					<p class="result-row-desc">
						{{description}}
					</p>
				</div>
				<div class="result-row-loyalty">
					<div class="loyalty-mark {{loyalty}}">
						{{loyaltySingleByName loyalty}}
					</div>
				</div>
			</div>
		{{/each}}
	</div>
	{{#pagination currentPage totalPages 5}}
		<ul class="pagination">
			<li class="prev">
				<button type="submit" formaction="/companies?currentPage={{prevPage}}&sortOrder={{../sortOrder}}" title="Попередня сторінка" data-ajax-formsubmit></button>
			</li>
			{{#each pages~}}
				<li class="page{{#if isCurrent}} active{{/if}}">
					<button type="submit" formaction="/companies?currentPage={{page}}&sortOrder={{../../sortOrder}}" data-ajax-formsubmit>
						{{page}}
					</button>
				</li>
			{{~/each}}
			<li class="next">
				<button type="submit" formaction="/companies?currentPage={{nextPage}}&sortOrder={{../sortOrder}}" title="Наступна сторінка" data-ajax-formsubmit></button>
			</li>
		</ul>
	{{/pagination}}
{{else}}
	За заданими вами параметрами нічого не знайдено.
{{/if}}