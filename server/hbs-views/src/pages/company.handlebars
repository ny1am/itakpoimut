<div class="pattern-content">
	<div class="container">
		<div class="company-wrapper">
			<section class="company">
				<div class="company-profile">
					<article class="company-info">
						<div class="col-1">
							<div class="company-logo">
								<img src="{{company.img}}" title="{{company.title}}">
							</div>
							<div class="c-loyalty-mark {{company.loyalty}}">
								{{loyaltySingleByName company.loyalty}}
							</div>
						</div>
						<div class="col-2">
							<div class="company-title" title="{{company.title}}">
								{{company.title}}
							</div>
							{{#if company.company_site}}
								<a href="{{http company.company_site}}" class="company-url" target="_blank">
									{{http company.company_site}}
								</a>
							{{/if}}
							{{#if company.description}}
								<p class="company-desc">{{company.description}}</p>
							{{/if}}
						</div>
					</article>
				</div>
				<div class="company-violations">
					<h2>
						Порушення компанії
					</h2>
					{{#if company.violations}}
						<ul class="company-violations">
							{{#each company.violations}}
								<li>
									<label>
										{{violationByName name}}
									</label>
								</li>
							{{/each}}
						</ul>
					{{/if}}
					<button data-ajax-dialog="addViolation" data-ajax-url="/addViolation?company_id={{company._id}}" class="add-violation">Додати порушення</button>
				</div>

				<div class="company-categories-holder">
					<h2>
						Сфери діяльності
					</h2>
					<ul class="company-categories">
						{{#each company.categories}}
							<li class="item">
								{{categoryByName this}}
							</li>
						{{/each}}
						<li class="add">
							<a href="/addCategory?company_id={{company._id}}" data-ajax-dialog="addCategory" data-ajax-url="/addCategory?company_id={{company._id}}">
								Додати сферу
							</a>
						</li>
					</ul>
				</div>
			</section>
			<div class="bottom-space">
				<div id="company-comments" class="container">
					{{> company_comments}}
				</div>
			</div>
		</div>
	</div>
</div>